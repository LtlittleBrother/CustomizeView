<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <com.fiction.view.CommonTitleView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_center_dimen_45_dip"
        app:layout_constraintTop_toBottomOf="@+id/main_title"
        app:tabIndicatorHeight="@dimen/dianyou_dimen_2_dip"
        app:tabSelectedTextColor="@color/red_light"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/dianyou_color_ff5548"
        app:tabMode="scrollable"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/main_view_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/main_tab_layout" />


</android.support.constraint.ConstraintLayout>