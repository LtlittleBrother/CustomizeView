<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.CustomizeViewThree"
        android:orientation="vertical">

    <com.fiction.view.CommonTitleView
        android:id="@+id/seven_title_four"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/seven_tab_layout_four"
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_center_dimen_45_dip"
        app:tabIndicatorHeight="@dimen/dianyou_dimen_2_dip"
        app:tabSelectedTextColor="@color/red_light"
        app:tabTextColor="@color/black"
        app:tabIndicatorColor="@color/dianyou_color_ff5548"
        app:tabMode="scrollable"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/seven_view_page_four"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>