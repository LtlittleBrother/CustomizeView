<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.customizeview.PraiseView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.customizeview.NumScrollView
        android:id="@+id/num_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/praise_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_center_dimen_50_dip"
        android:text="点赞"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/dianyou_color_222222"/>

</LinearLayout>